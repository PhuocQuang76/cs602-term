{{>common/header}}
<!-- Page Title-->
<div class="page-title">
    <div class="container">
        <div class="column">
            <h1>{{title}}</h1>
        </div>
    </div>
</div>
<!-- Page Content-->
<div class="container padding-bottom-3x mb-1">
    {{#if isError}}
        <div class="row, alert-danger">{{errorMessage}}</div>
    {{else}}
    <form method="post" id="update-form">
        <div class="table-responsive shopping-cart">
            <table class="table">
                <thead>
                <tr>
                    <th>Product Name</th>
                    <th class="text-center">Quantity</th>
                    <th class="text-center">Unity Price</th>
                    <th class="text-center">Total</th>
                    <th class="text-center"><a class="btn btn-sm btn-outline-danger" href="/cart/empty.html">Clear Cart</a></th>
                </tr>
                </thead>
                    <tbody>
                    {{#each items}}
                        <tr>
                            <td>
                                <input type="hidden" name="itemId" value="{{itemId}}">
                                <div class="product-item"><a class="product-thumb" href="#"><img src="{{itemImage}}" alt="Product"></a>
                                    <div class="product-info">
                                        <h4 class="product-title">
                                            {{itemName}}
                                        </h4>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="count-input">
                                    <input type="number" name="itemCount" value="{{itemCount}}">
                                </div>
                            </td>
                            <td class="text-center text-lg">{{itemPrice}}</td>
                            <td class="text-center text-lg">{{itemTotal}}</td>
                            <td class="text-center">&nbsp;</td>
                        </tr>
                    {{/each}}
                    </tbody>

            </table>
        </div>
        <div class="shopping-cart-footer">
            <div class="column">
                &nbsp;
            </div>
            <div class="column text-lg"><span class="text-muted">Subtotal:&nbsp; </span><span class="text-gray-dark">{{total}}</span></div>
        </div>
        <div class="shopping-cart-footer">
            <div class="column">
                <a class="btn btn-outline-secondary" href="/">
                    <i class="icon-arrow-left"></i>&nbsp
                    Back to Shopping
                </a>
            </div>
            <div class="column">
                <input type="submit" class="btn btn-secondary" value="Update Cart" name="buttonAction"/>
                <a class="btn btn-primary" href="/cart/pay.html"/>
                    Pay Items
                </a>
            </div>
        </div>
    </form>
    {{/if}}
</div>